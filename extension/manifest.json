{
  "name": "Canvas New Quizzes Item Bank Exporter",
  "version": "0.4.0",
  "manifest_version": 3,

  "description": "Detect Canvas New Quizzes item banks directly via API sniffing.",

  "permissions": ["storage"],

  "host_permissions": ["*://*.instructure.com/*"],

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": [
        "*://*.instructure.com/*",
        "*://*.instructure.com/*",
        "*://*.quiz-lti-*.instructure.com/*",
        "*://*.quiz-api-*.instructure.com/*",
        "*://*/lti/*",
        "*://*/api/banks/*"
      ],
      "js": ["content-script.js"],
      "run_at": "document_start",
      "all_frames": true,
      "match_origin_as_fallback": true
    }
  ],

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/16.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    }
  },

  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  }
}

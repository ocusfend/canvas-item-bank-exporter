{
  "name": "Canvas New Quizzes Item Bank Exporter",
  "version": "0.3.4",
  "manifest_version": 3,
  "description": "Export New Quizzes item banks directly from Canvas.",

  "permissions": ["storage", "webRequest"],
  "host_permissions": ["https://*.instructure.com/*"],

  "content_scripts": [
    {
      "matches": ["https://*.instructure.com/*"],
      "js": ["content-script.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/16.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    }
  },

  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  }
}
